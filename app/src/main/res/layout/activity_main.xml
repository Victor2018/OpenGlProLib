<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_triangle"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:text="Triangle"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <Button
        android:id="@+id/btn_gl_surface"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:text="GLSurfaceView"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_triangle"
        app:layout_constraintHorizontal_weight="1"/>
    <Button
        android:id="@+id/btn_texture"
        android:layout_width="@dimen/dp_280"
        android:layout_height="wrap_content"
        android:text="TextureView"
        android:textAllCaps="false"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_gl_surface"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tv_camera_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_35"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/dp_28"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1280*720"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_camera_output_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera_params"
        android:gravity="center_vertical"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/dp_28"
        tools:text="outPutFile"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>